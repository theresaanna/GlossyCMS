# =============================================================================
# GlossyCMS Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.
# Variables marked [REQUIRED] must be set for the application to start.
# Variables marked [REQUIRED for production] can be omitted in local dev.
# Variables marked [OPTIONAL] have sensible defaults.

# --- Database [REQUIRED] ---
# PostgreSQL connection string
# Neon: postgresql://user:pass@host/dbname?sslmode=require
# Supabase: postgresql://user:pass@host:port/dbname
POSTGRES_URL=postgresql://127.0.0.1:5432/glossycms

# --- Security Secrets [REQUIRED] ---
# Generate with: openssl rand -hex 32
PAYLOAD_SECRET=
CRON_SECRET=
PREVIEW_SECRET=

# --- Application URL [OPTIONAL] ---
# No trailing slash. On Vercel, VERCEL_PROJECT_PRODUCTION_URL is used automatically.
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# --- Email [REQUIRED for production] ---
# Resend.com API key â€” app will start without it in dev, but email won't work.
RESEND_API_KEY=
# Sender identity for outgoing emails
FROM_EMAIL=hello@example.com
FROM_NAME=GlossyCMS

# --- File Storage [REQUIRED for production] ---
# Vercel Blob storage token for media uploads
BLOB_READ_WRITE_TOKEN=

# --- Primary Instance [OPTIONAL] ---
# Set to 'true' only on the glossysites.live instance to enable signup + provisioning.
IS_PRIMARY_INSTANCE=
# Vercel API token for provisioning new sites (required if IS_PRIMARY_INSTANCE=true)
VERCEL_TOKEN=
# Vercel team ID for provisioning (required if IS_PRIMARY_INSTANCE=true)
VERCEL_TEAM_ID=

# --- Stripe [REQUIRED if IS_PRIMARY_INSTANCE=true] ---
# Stripe secret key (sk_live_... or sk_test_...)
STRIPE_SECRET_KEY=
# Stripe webhook signing secret (whsec_...)
STRIPE_WEBHOOK_SECRET=
# Stripe Price IDs for subscription plans
STRIPE_BASIC_PRICE_ID=
STRIPE_PRO_PRICE_ID=

# --- Site Plan [Set automatically during provisioning] ---
# Plan for this site instance: 'basic' or 'pro'
SITE_PLAN=

# --- Branding [OPTIONAL] ---
# Site name used in page titles, SEO metadata, and OpenGraph tags
SITE_NAME=GlossyCMS
# Default OpenGraph description
SITE_DESCRIPTION=A website powered by GlossyCMS.
# Twitter/X handle for meta cards (include the @)
TWITTER_HANDLE=
